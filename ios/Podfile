# Uncomment this line to define a global platform for your project
platform :ios, '15.0'

use_frameworks! :linkage => :static
use_modular_headers!

# Disable CocoaPods analytics for faster builds
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

# Function to find Flutter SDK
def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. Run flutter pub get first."
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  # Use static frameworks for all pods
  use_frameworks! :linkage => :static

  # Flutter pods
  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))

  # ZoomVideoSDK
  pod 'ZoomVideoSDK', :modular_headers => true

  target 'RunnerTests' do
    inherit! :search_paths
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] ||= [
        '$(inherited)',

        # Camera
        'PERMISSION_CAMERA=1',

        # Microphone
        'PERMISSION_MICROPHONE=1',

        # Location (all)
        'PERMISSION_LOCATION=1',

        # Media library
        'PERMISSION_MEDIA_LIBRARY=1',

        # Photos
        'PERMISSION_PHOTOS=1',

        # File access — handled via app sandbox; no permission flag needed
        # Internet — handled via Info.plist (NSAppTransportSecurity)
      ]
      # Minimum iOS version
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.0'

      # Do NOT exclude arm64 on Apple Silicon simulators (M1/M2/M3/M4)
      config.build_settings.delete('EXCLUDED_ARCHS[sdk=iphonesimulator*]')
    end

    # Flutter settings
    flutter_additional_ios_build_settings(target)

    # ✅ Explicitly link VideoToolbox for Zoom/Video SDKs
    if target.respond_to?(:frameworks_build_phase)
      video_toolbox = installer.sandbox.project_path.join("System/Library/Frameworks/VideoToolbox.framework")
      ref = installer.pods_project.new_file(video_toolbox)
      target.frameworks_build_phase.add_file_reference(ref, true)
    end
  end
end




